<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_quiz"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.filip.quizdown.QuizActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#bdc3c7">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarQuiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:elevation="6dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbarQuiz"
        android:indeterminate="false"
        android:max="10"
        android:minHeight="50dp"
        android:minWidth="200dp"
        android:progress="0"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Who is the winner of RSC 3.0?"
        android:layout_below="@id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="18pt"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:id="@+id/tvQuestion"
        android:textColor="#2c3e50"/>

    <TextView
        android:text="Code for Harambe"
        android:layout_width="match_parent"
        android:background="#2c3e50"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_centerHorizontal="true"
        android:textSize="14pt"
        android:textAlignment="center"
        android:layout_below="@id/tvQuestion"
        android:textColor="#bdc3c7"
        android:id="@+id/answer1"
        android:padding="15dp"/>
    <TextView
        android:text="Code for Harambe"
        android:layout_width="match_parent"
        android:background="#2c3e50"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_centerHorizontal="true"
        android:textSize="14pt"
        android:textAlignment="center"
        android:layout_below="@id/answer1"
        android:id="@+id/answer2"
        android:textColor="#bdc3c7"
        android:padding="15dp"/>
    <TextView
        android:text="Code for Harambe"
        android:layout_width="match_parent"
        android:background="#2c3e50"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_centerHorizontal="true"
        android:textSize="14pt"
        android:textAlignment="center"
        android:layout_below="@id/answer2"
        android:textColor="#bdc3c7"
        android:id="@+id/answer3"
        android:padding="15dp"/>
    <TextView
        android:text="Anybody else"
        android:layout_width="match_parent"
        android:background="#2c3e50"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_centerHorizontal="true"
        android:textSize="14pt"
        android:padding="15dp"
        android:textColor="#bdc3c7"
        android:textAlignment="center"
        android:layout_below="@id/answer3"
        android:id="@+id/answer4"/>

</RelativeLayout>
